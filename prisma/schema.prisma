generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                        String                  @id @default(cuid())
  email                     String                  @unique
  passwordHash              String
  createdAt                 DateTime                @default(now())
  isSubscriber              Boolean                 @default(false)
  subscriberSince           DateTime?
  activeCompanyId           String?
  emailVerifiedAt           DateTime?               @db.Timestamp(6)
  emailVerificationToken    EmailVerificationToken?
  bankAccount               BankAccount?
  personalCompany           Company?                @relation("PersonalCompany")
  companyUsers              CompanyUser[]
  personProfile             PersonProfile?
  sessions                  Session[]
  approvedTreasuryMovements TreasuryMovement[]      @relation("TreasuryMovementApprovedBy")
  createdTreasuryMovements  TreasuryMovement[]      @relation("TreasuryMovementCreatedBy")
  loans                     Loan[]
  createdLoanEvents         LoanEvent[]             @relation("LoanEventCreatedBy")
  activeCompany             Company?                @relation("ActiveCompany", fields: [activeCompanyId], references: [id])
  depositSlips              DepositSlip[]
  onboarding                UserOnboarding?
}

model PersonProfile {
  userId              String   @id
  fullName            String?
  rut                 String?
  phone               String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  birthDate           String?
  documentSerial      String?
  nationality         String?
  idDocumentBackPath  String?
  idDocumentFrontPath String?
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([rut])
}

model BankAccount {
  id            String   @id @default(cuid())
  userId        String   @unique
  bankName      String
  accountType   String
  accountNumber String
  holderRut     String
  createdAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([holderRut])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AdminUser {
  id           String         @id @default(cuid())
  email        String         @unique
  passwordHash String
  role         AdminRole      @default(ADMIN)
  createdAt    DateTime       @default(now())
  sessions     AdminSession[]
}

model AdminSession {
  id          String    @id @default(cuid())
  token       String    @unique
  adminUserId String
  createdAt   DateTime  @default(now())
  expiresAt   DateTime
  adminUser   AdminUser @relation(fields: [adminUserId], references: [id], onDelete: Cascade)

  @@index([adminUserId])
  @@index([expiresAt])
}

model Company {
  id                  String             @id @default(cuid())
  name                String
  kind                CompanyKind        @default(BUSINESS)
  personalOwnerId     String?            @unique
  companyRut          String?
  fundsDeclAcceptedAt DateTime?
  onboardingCompleted Boolean            @default(false)
  privacyAcceptedAt   DateTime?
  termsAcceptedAt     DateTime?
  personalOwner       User?              @relation("PersonalCompany", fields: [personalOwnerId], references: [id], onDelete: Cascade)
  members             CompanyUser[]
  treasury            TreasuryAccount[]
  movements           TreasuryMovement[]
  loans               Loan[]
  activeUsers         User[]             @relation("ActiveCompany")
}

model CompanyUser {
  userId    String
  companyId String
  role      String
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, companyId])
}

/// *
///  * ✅ Antes: 1 cuenta por company (companyId unique)
///  * ✅ Ahora: 1 cuenta por (companyId, assetCode)
model TreasuryAccount {
  id        String    @id @default(cuid())
  companyId String
  balance   Decimal   @default(0)
  assetCode AssetCode @default(BTC)
  company   Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([companyId, assetCode])
  @@index([companyId])
}

/// *
///  * ✅ Movimientos multi-asset + approvals (Fase 2)
model TreasuryMovement {
  id                  String                 @id @default(cuid())
  companyId           String
  amount              Decimal
  type                String
  note                String?
  createdAt           DateTime               @default(now())
  assetCode           AssetCode              @default(BTC)
  approvedAt          DateTime?
  approvedByUserId    String?
  attachmentUrl       String?
  createdByUserId     String?
  status              TreasuryMovementStatus @default(PENDING)
  executedAt          DateTime?
  executedPrice       Decimal?
  executedQuoteCode   AssetCode?
  executedSource      String?
  executedBaseAmount  Decimal?
  executedFeeAmount   Decimal?
  executedFeeCode     AssetCode?
  executedQuoteAmount Decimal?
  externalOrderId     String?
  externalVenue       String?
  internalNote        String?
  internalReason      InternalMovementReason @default(NONE)
  internalState       InternalMovementState  @default(NONE)
  lastError           String?
  nextRetryAt         DateTime?
  retryCount          Int                    @default(0)
  paidOut             Boolean                @default(false)
  paidOutAt           DateTime?              @db.Timestamptz(6)
  approvedBy          User?                  @relation("TreasuryMovementApprovedBy", fields: [approvedByUserId], references: [id])
  company             Company                @relation(fields: [companyId], references: [id], onDelete: Cascade)
  createdBy           User?                  @relation("TreasuryMovementCreatedBy", fields: [createdByUserId], references: [id])

  @@index([companyId, createdAt])
  @@index([companyId, assetCode, createdAt])
  @@index([companyId, status, createdAt])
}

model Loan {
  id             String     @id @default(cuid())
  companyId      String
  userId         String
  currency       LoanCurrency @default(CLP)
  principalClp   Decimal
  interestApr    Decimal
  termMonths     Int        @default(3)
  repaymentType  LoanRepaymentType @default(BULLET)
  ltvTarget      Decimal
  ltvMax         Decimal
  liquidationLtv Decimal
  status         LoanStatus @default(CREATED)
  createdAt      DateTime   @default(now())
  approvedAt     DateTime?
  disbursedAt    DateTime?
  disbursementMovementId String?
  closedAt       DateTime?
  borrower       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  company        Company    @relation(fields: [companyId], references: [id], onDelete: Cascade)
  collateral     LoanCollateral[]
  events         LoanEvent[]

  @@index([companyId, createdAt])
  @@index([companyId, status, createdAt])
  @@index([companyId, disbursementMovementId])
  @@index([companyId, userId, status, createdAt])
  @@index([userId, createdAt])
}

model LoanCollateral {
  id        String    @id @default(cuid())
  loanId    String
  assetCode AssetCode @default(BTC)
  amountSats BigInt
  createdAt DateTime  @default(now())
  loan      Loan      @relation(fields: [loanId], references: [id], onDelete: Cascade)

  @@index([loanId, createdAt])
}

model LoanEvent {
  id              String        @id @default(cuid())
  loanId          String
  type            LoanEventType
  payload         Json?
  createdAt       DateTime      @default(now())
  createdByUserId String?
  loan            Loan          @relation(fields: [loanId], references: [id], onDelete: Cascade)
  createdBy       User?         @relation("LoanEventCreatedBy", fields: [createdByUserId], references: [id])

  @@index([loanId, createdAt])
  @@index([loanId, type, createdAt])
}

model PriceSnapshot {
  id        String    @id @default(cuid())
  assetCode AssetCode
  quoteCode AssetCode
  price     Decimal
  source    String
  createdAt DateTime  @default(now())

  @@index([assetCode, quoteCode, createdAt])
}

model UserOnboarding {
  userId              String    @id
  termsAcceptedAt     DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  idDocumentBackPath  String?
  idDocumentFrontPath String?
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_onboarding")
}

model MarketTrade {
  id        String   @id @default(cuid())
  marketId  String
  timeMs    BigInt
  price     Decimal
  amount    Decimal
  direction String
  createdAt DateTime @default(now())

  @@unique([marketId, timeMs, price, amount, direction])
  @@index([marketId, timeMs])
}

model CronRun {
  id         String   @id @default(cuid())
  job        String
  marketId   String
  ok         Boolean
  inserted   Int
  error      String?
  startedAt  DateTime
  finishedAt DateTime
  createdAt  DateTime @default(now())

  @@index([job, createdAt])
  @@index([marketId, createdAt])
}

model SystemWalletSnapshot {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  at        DateTime
  payload   Json

  @@index([createdAt])
}

model DepositSlip {
  id                String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId            String   @map("user_id")
  filePath          String   @map("file_path")
  fileMime          String?  @map("file_mime")
  fileSizeBytes     BigInt?  @map("file_size_bytes")
  declaredAmountClp BigInt?  @map("declared_amount_clp")
  ocrStatus         String   @default("received") @map("ocr_status")
  ocrText           String?  @map("ocr_text")
  parsedAmountClp   BigInt?  @map("parsed_amount_clp")
  bankHint          String?  @map("bank_hint")
  status            String   @default("received")
  notes             String?
  createdAt         DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt         DateTime @default(now()) @map("updated_at") @db.Timestamptz(6)
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([createdAt])
  @@index([status])
  @@index([userId])
  @@map("deposit_slips")
}

enum CompanyKind {
  PERSONAL
  BUSINESS
}

/// *
///  * ✅ Multi-asset real
///  * - BTC: satoshis/bitcoin (tu lógica actual vive acá)
///  * - CLP/USD: se habilitan en la fase siguiente (saldo, movimientos, pricing)
enum AssetCode {
  BTC
  CLP
  USD
}

enum InternalMovementState {
  NONE
  WAITING_LIQUIDITY
  WAITING_BANK_TOPUP
  WAITING_MIN_SIZE_AGGREGATION
  RETRYING_BUDA
  MANUAL_REVIEW
  FAILED_TEMPORARY
}

enum InternalMovementReason {
  NONE
  INSUFFICIENT_LIQUIDITY
  BELOW_BUDA_MIN
  BUDA_INSUFFICIENT_FUNDS
  BUDA_API_ERROR
  PRICE_MISSING
  UNKNOWN
}

/// *
///  * ✅ Fase 2: workflow de aprobación
enum TreasuryMovementStatus {
  PENDING
  APPROVED
  REJECTED
  PROCESSING
}

enum LoanStatus {
  CREATED
  APPROVED
  DISBURSED
  CLOSED
  LIQUIDATED
  CANCELLED
}

enum LoanCurrency {
  CLP
}

enum LoanRepaymentType {
  BULLET
}

enum LoanEventType {
  CREATED
  APPROVED
  DISBURSED
  INTEREST_PAID
  PRINCIPAL_PAID
  MARGIN_CALL
  LIQUIDATION
  COLLATERAL_ADDED
  COLLATERAL_RELEASED
}

enum AdminRole {
  ADMIN
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  userId    String   @unique
  token     String   @unique
  expiresAt DateTime @db.Timestamptz(6)
  createdAt DateTime @default(now()) @db.Timestamptz(6)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
